mixin modal-select()

  .modal-select#modalSelect
    .modal-select__header
      h5.modal-select__title Выбран ваш город ?
      a.modal-select__close(href="#" data-dismiss="modal" aria-label="Close")
        svg.close-icon(width="14" height="14")
          use(xlink:href="img/sprite-svg.svg#modals__close")

    .modal-select__body
      .modal-select__location
        svg.modal-select__location-icon(width="11" height="16")
          use(xlink:href="img/sprite-svg.svg#page-header__location")
        span.modal-select__location-info Город
        a.modal-select__location-city.callModalLocation(href="#") Москва
      .modal-select__btn-block
        button.modal-select__btn.btn(data-dismiss="modal" aria-label="Close") Да
        button#modalsBtnCancel.modal-select__btn.btn.btn--gray Нет

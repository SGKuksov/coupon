mixin rating(readonly, score)

  if (!readonly)
    .stars.stars-example-fontawesome.rating
      .br-wrapper.br-theme-fontawesome-stars
        select#ratingBar.rating-bar(name="rating" autocomplete="off" style="display: none;")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
        //- .br-widget
          a.br-selected.br-current(href="#" data-rating-value="1" data-rating-text="1")
          a(href="#" data-rating-value="2" data-rating-text="2")
          a(href="#" data-rating-value="3" data-rating-text="3")
          a(href="#" data-rating-value="4" data-rating-text="4")
          a(href="#" data-rating-value="5" data-rating-text="5")
      //- span.title.current-rating
        | Current rating:
        span.value 1
      //- span.title.your-rating.hidden
        | Your rating:
        span.value


  if (readonly)
    .stars.stars-example-fontawesome.rating
      .br-wrapper.br-theme-fontawesome-stars
        select.rating-bar.rating-bar--readonly(name="rating" autocomplete="off" style="display: none;")
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
      if (score)
        .rating__label
          span.title.current-rating
            span.value.rating__score 4,52
            span.rating__count (24 голоса)

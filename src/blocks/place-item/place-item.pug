mixin place-item()

  .place-item
    a.place-item__close(href="#" data-dismiss="modal" aria-label="Close")
      svg.close-icon(width="9" height="9")
        use(xlink:href="img/sprite-svg.svg#modals__close")

    span.place-item__category
      | Развлечения

    h3.place-item__title
      | Аквапарк «Родео Драйв»

    .place-item__meta-block
      .place-item__meta
        span.place-item__meta-title
          | Адрес
        span.place-item__meta-address
          | пр. Культуры, 1, Москва

      .place-item__meta
        span.place-item__meta-title
          | Телефон
        span.place-item__meta-phone
          | +7 (812) 123-45-67

      .place-item__meta
        span.place-item__meta-title
          | Время работы
        span.place-item__meta-time
          | Пн-Вс: 08:00-22:00

      a.place-item__link(href="#")
        | Подробнее

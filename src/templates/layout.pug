include ../mixins.pug

doctype html
html(class="no-js  page", lang="ru")

  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="robots" content="noindex, nofollow")

    block meta
      title Home

    block head
      link(rel="stylesheet", href="css/style.min.css")
      link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
      script.
        document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  body
    block page-header
      +page-header()

    .page-container
      aside.sidebar.pushy.pushy-left
        +side-nav()
        +collections()
        block extra-blocks

      main.main
        .site-overlay
        .overlay
        .main__container#container
          block bread
          block top-panel
            +top-panel("Все купоны со скидками в одном месте", admin)
          block top-panel-edit
            +top-panel-edit(admin)
          +filter()
          block main-content
          +about()

    +page-footer()
    //- modal-location
    +modal-location()
    +modals()

    block page-bottom
      script(src="js/script.min.js")
